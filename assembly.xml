
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>zip</id>

    <includeBaseDirectory>true</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>src/main/resources/README.txt</source>
            <outputDirectory></outputDirectory>
        </file>
        <file>
            <source>src/main/resources/bin/terzi.release</source>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/conf/log4j2.xml</source>
            <outputDirectory>conf</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/conf/terzi.properties</source>
            <outputDirectory>conf</outputDirectory>
        </file>
        <file>
            <source>src/main/resources/conf/terziInstanceGuid.dat</source>
            <outputDirectory>conf</outputDirectory>
        </file>

        <file>
            <source>src/main/resources/bin/oval.sh</source>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/main/resources/bin/oval.bat</source>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/main/resources/bin/scan.sh</source>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/main/resources/bin/scan.bat</source>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/main/resources/bin/info.sh</source>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/main/resources/bin/info.bat</source>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/main/resources/nmap/vulniq-scan.nse</source>
            <outputDirectory>nmap</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <destName>${project.artifactId}.jar</destName>
            <outputDirectory>bin</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>src/main/resources/powershell-scripts</directory>
            <outputDirectory>scripts/powershell</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <excludes>
                <exclude>${project.groupId}:${project.artifactId}</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>